  <script>
    // Mobile menu toggle
    const nav = document.getElementById('nav');
    const menuBtn = document.getElementById('menuBtn');
    if (menuBtn) {
      menuBtn.addEventListener('click', () => {
        nav.classList.toggle('open');
        menuBtn.textContent = nav.classList.contains('open') ? 'Close' : 'Menu';
      });
    }

    // Contact form -> opens email with prefilled details (static-site friendly)
    const TEAM_EMAIL = "yourteamemail@example.com"; // <-- CHANGE THIS
    const form = document.getElementById('contactForm');

    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        const parentName = document.getElementById('parentName').value.trim();
        const studentYear = document.getElementById('studentYear').value;
        const email = document.getElementById('email').value.trim();
        const suburb = document.getElementById('suburb').value.trim();
        const help = document.getElementById('help').value.trim();

        const subject = encodeURIComponent("Auckland Tutoring Request");
        const body = encodeURIComponent(
          `Parent/Caregiver: ${parentName}\n` +
          `Student Year Level: ${studentYear}\n` +
          `Email: ${email}\n` +
          `Suburb: ${suburb || "—"}\n\n` +
          `Help needed:\n${help}\n`
        );

        window.location.href = `mailto:${TEAM_EMAIL}?subject=${subject}&body=${body}`;
      });
    }

    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
</body>
</html>

